<Window x:Class="Baboon.DemoWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Baboon.DemoWpf"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
         xmlns:services="clr-namespace:BaboonDemo.Core.Services;assembly=BaboonDemo.Core"
        Width="800"
        Height="450"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu ItemsSource="{Binding MenuItems}">
            <Menu.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type services:MenuItem}" ItemsSource="{Binding Items}">
                    <MenuItem Header="{Binding Text}" 
  Command="{Binding ClickCommand}" />
                </HierarchicalDataTemplate>
            </Menu.ItemTemplate>
        </Menu>

        <ListBox Grid.Row="1" ItemsSource="{Binding Messages}">
            
        </ListBox>
    </Grid>

</Window>
