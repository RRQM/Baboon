<Window x:Class="Baboon.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Baboon.Wpf"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
         xmlns:services="clr-namespace:Baboon.Core.Services;assembly=Baboon.Core"
        Width="800"
        Height="450"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu ItemsSource="{Binding MenuItems}">
            <Menu.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type services:MenuItem}" ItemsSource="{Binding Items}">
                    <MenuItem Header="{Binding Text}" 
  Command="{Binding ClickCommand}" />
                </HierarchicalDataTemplate>
            </Menu.ItemTemplate>
        </Menu>

        <WrapPanel Grid.Row="1">
            <Button Margin="10"
            Command="{Binding ThrowErrorCommand}"
            Content="抛出异常" />

            <Button Margin="10"
            Command="{Binding SayHelloCommand}"
            Content="SayHello" />

            <ContentControl x:Name="contentRoot"/>
        </WrapPanel>
    </Grid>
    
</Window>
